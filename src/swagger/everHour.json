{
    "definitions": {
        "WeekTasksInput": {
            "required": ["limit"],
            "properties": {
                "limit": {
                    "type": "string"
                }
            }
        },
        "TaskUpdateInput": {
            "required": ["time", "date", "taskId"],
            "properties": {
                "comment": {
                    "type": "string",
                    "uniqueItems": true
                },
                "date": {
                    "type": "string"
                },
                "taskId": {
                    "type": "string"
                },
                "time": {
                    "type": "string"
                }
            }
        },

        "TimeSlot": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                },
                "comment": {
                    "type": "string"
                },
                "manualTime": {
                    "type": "number"
                }
            }
        },

        "TaskItem": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "projectId": {
                    "type": "string"
                },
                "projectName": {
                    "type": "string"
                },
                "taskTimes": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/TimeSlot"
                    }
                },
                "dailyTime": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "totalTime": {
                    "type": "number"
                }
            }
        },
        "WeekTasks": {
            "type": "array",
            "items": {
                "allOf": [{ "$ref": "#/definitions/TaskItem" }]
            }
        },
        "timeSheets": {
            "type": "array",
            "items": {
                "allOf": [{ "$ref": "#/definitions/WeekTasks" }]
            }
        }
    },

    "paths": {
        "/api/everHour/getWeekTasks": {
            "post": {
                "tags": ["EverHour"],
                "requestBody": {
                    "description": "pull all recents tasks with their recorded times",
                    "required": " true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/WeekTasksInput"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "All Resolved Tasks",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/timeSheets"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/everHour/updateTask": {
            "put": {
                "tags": ["EverHour"],
                "requestBody": {
                    "description": "update the task time ,comment",
                    "required": " true",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/definitions/TaskUpdateInput"
                            },
                            "example": {
                                "time": "180",
                                "date": "2022-10-20",
                                "comment": "Ph testing....",
                                "taskId": "ev:254620015597338"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "Authorization": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Updated Tasks",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/definitions/TaskUpdateInput"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
